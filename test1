def Count(file):
    a = file.read()
    print(file.name)

if __name__ == "__main__":
    import sys

    try:
        syslen=len(sys.argv)
        for i in range(1,syslen):
            with open(sys.argv[i]) as f:
                Count(f)
    except IOError:
        print("We donâ€™t handle that situation yet!")